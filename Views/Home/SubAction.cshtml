@model IEnumerable<MoneyMVC.Models.ViewModels.MoneyViewModel>
@{
    Layout = null;
}

<div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
                @{
                    foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.No</td>
                            <td>@m.Type</td>
                            <td>@m.Date.ToString("yyyy-MM-dd")</td>
                            <td>@m.Price.ToString("N0")</td>
                        </tr>
                    };
                }

            </table>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
