@using MoneyMVC.Extensions

@model IEnumerable<MoneyMVC.Models.ViewModels.MoneyViewModel>
@{
    Layout = null;
    var index = 1;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row" id="moneylist">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
                @{
                    foreach (var m in Model)
                    {

                        var color = m.Type == MoneyMVC.Enums.CategoryType.Income ? "blue" : "red";

                        <tr style="color:@color">
                            <td>@index</td>
                            <td>@(m.Type.GetDisplayName())</td>
                            <td>@Html.DisplayFor(modelitem => m.Date)</td>
                            <td>@Html.DisplayFor(modelitem => m.Price)</td>
                        </tr>
                        index++;
                    };
                }

            </table>
        </div>
    </div>
}




@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
